import React, { useEffect } from 'react';

export const TEMPLATE6_INLINE_CSS = `
.t6-root { font-family: Arial, sans-serif; color:#222 }
.t6-hero{background:linear-gradient(90deg,#667eea,#764ba2);color:white;padding:32px}
.t6-name{font-size:26px;font-weight:700}
.t6-title{font-size:14px;opacity:.9}
`;

export default function Template6({ userData = {} }) {
  const data = {
    name: 'Alex Thompson',
    title: 'Marketing Growth Lead',
    location: 'San Francisco, CA',
    email: 'alex@example.com',
    skills: ['SEO', 'PPC', 'Content'],
    ...userData
  };

  useEffect(() => {
    if (typeof document === 'undefined') return;
    const s = document.createElement('style');
    s.textContent = TEMPLATE6_INLINE_CSS;
    document.head.appendChild(s);
    return () => { if (document.head.contains(s)) document.head.removeChild(s); };
  }, []);

  return (
    <div id="root">
      <div className="t6-root">
        <div className="t6-hero">
          <div className="t6-name">{data.name}</div>
          <div className="t6-title">{data.title} â€” {data.location}</div>
        </div>
        <section style={{ padding: 20, background: '#fff' }}>
          <h3>Contact</h3>
          <div>{data.email}</div>
        </section>
        <section style={{ padding: 20, background: '#fff' }}>
          <h3>Skills</h3>
          <ul>
            {data.skills.map((s, i) => <li key={i}>{s}</li>)}
          </ul>
        </section>
      </div>
    </div>
  );
}
